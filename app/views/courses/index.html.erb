<div class="page-header">
  <%= link_to new_course_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    <%= t 'views.models.course.new' %>
  <% end %>
  <h1><%= t 'views.models.course.listing' %></h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <form class="form-inline">
          <div class="form-group">
            <input type="text" class="form-control" id="title_search" name='title_search' placeholder="TÃ­tulo">
          </div>
          <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
      </div>
      <div class="col-md-4">
        <form class="form-inline">
          <div class="form-group">
            <%= select_tag "by_school", options_from_collection_for_select(@schools, "id", "name"), class: 'form-control', prompt: 'Escola' %>
          </div>
          <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th><%= t 'views.models.course.title' %></th>
          <th><%= t 'views.models.course.course' %></th>
          <th><%= t 'views.models.course.description' %></th>
          <th><%= t 'views.models.course.duration' %></th>
          <th><%= t 'views.models.course.creation_date' %></th>
          <th><%= t 'views.models.course.active_students' %></th>
          <th><%= t 'views.models.course.price' %></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @courses) do |course| %>
          <td><%= course.title %></td>
          <td><%= course.school.name %></td>
          <td><%= course.description %></td>
          <td><%= course.duration %></td>
          <td><%= course.creation_date %></td>
          <td><%= course.active_students %></td>
          <td><%= course.price %></td>
          <td><%= link_to t('views.show'), course %></td>
          <td><%= link_to t('views.edit'), edit_course_path(course) %></td>
          <td><%= link_to t('views.destroy'), course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
